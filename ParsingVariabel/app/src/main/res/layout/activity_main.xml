<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="25dp"
    tools:context="id.sch.parsingvariabel.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Formuir"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/textView"
        android:textColor="#000"
        android:typeface="monospace"/>

<EditText
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:inputType="textPersonName"
android:ems="10"
android:id="@+id/editNama"
android:layout_below="@+id/textView"
android:layout_alignParentStart="true"
android:layout_alignParentEnd="true"
android:hint="Nama"
    android:textColor="#000"
    android:typeface="monospace"/>

<EditText

android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:inputType="date"
android:ems="10"
android:id="@+id/editTahun"
android:layout_below="@+id/editNama"
android:layout_alignParentStart="true"
android:layout_alignEnd="@+id/editNama"
android:hint="Tahun Lahir"
android:textColor="#000"
    android:typeface="monospace"/>

<EditText
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:inputType="textPostalAddress"
android:ems="10"
android:id="@+id/editAlamat"
android:layout_below="@+id/editTahun"
android:layout_alignParentStart="true"
android:layout_alignParentEnd="true"
android:hint="Alamat"
    android:textColor="#000"
    android:typeface="monospace"/>

<EditText
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:inputType="date"
android:ems="10"
android:id="@+id/editTelepon"
android:layout_below="@+id/editAlamat"
android:layout_alignParentStart="true"
android:layout_alignEnd="@+id/editAlamat"
android:hint="Nomor Telepon"
    android:textColor="#000"
    android:typeface="monospace"/>

<EditText

android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:inputType="textEmailAddress"
android:ems="10"
android:id="@+id/editEmail"
android:layout_below="@+id/editTelepon"
android:layout_alignParentStart="true"
android:layout_alignParentEnd="true"
android:hint="Alamat Email"
    android:textColor="#000"
    android:typeface="monospace"/>

<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Submit"
android:id="@+id/btnSubmit"
android:layout_centerVertical="true"
android:layout_alignParentStart="true"
    android:typeface="monospace"/>

<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Hapus"
android:id="@+id/btnHapus"
android:layout_alignBottom="@+id/btnSubmit"
android:layout_alignEnd="@+id/editEmail"
    android:typeface="monospace"/>

</RelativeLayout>

