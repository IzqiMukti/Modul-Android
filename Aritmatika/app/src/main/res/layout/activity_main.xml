<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="25dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:gravity="center_horizontal"
    tools:context="id.sch.aritmatika.MainActivity"
    android:background="#F5DEB3"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#000"
        android:text="Silahkan Masukkan Nilai Rupiah"
        android:typeface="monospace"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editRupiah"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000"
        android:typeface="monospace"/>

    <RadioGroup android:id="@+id/RadioGroup01"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="0.98"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="38dp"
        android:textColor="#000"
        android:typeface="monospace"/>

    <RadioButton
        android:id="@+id/radioEuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editRupiah"
        android:layout_alignStart="@+id/RadioGroup01"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:text="Euro"
        android:textColor="#000"
        android:typeface="monospace"/>

    <RadioButton
        android:id="@+id/radioDolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioEuro"
        android:layout_alignStart="@+id/RadioGroup01"
        android:layout_marginStart="-3dp"
        android:textColor="#000"
        android:typeface="monospace"
        android:layout_marginTop="14dp"
        android:checked="false"
        android:text="Dolar" />

    <Button
        android:id="@+id/btnOkKonversi"
        android:layout_width="104dp"
        android:layout_height="69dp"
        android:layout_below="@+id/radioDolar"
        android:layout_alignEnd="@+id/txtHasil"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="475dp"
        android:background="#F5F5F5"
        android:text="OK"
        android:textColor="#000"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnOkKonversi"
        android:layout_marginBottom="-93dp"
        android:gravity="left"
        android:text="Hasil"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:typeface="monospace" />

</RelativeLayout>







