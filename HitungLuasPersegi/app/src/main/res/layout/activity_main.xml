<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="id.sch.hitungluaspersegi.MainActivity"
    android:background="#F5DEB3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan panjang sisi"
        android:id="@+id/txtsisi"
        android:textColor="#000"
        android:typeface="monospace"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSisi"
        android:layout_below="@+id/txtsisi"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000"
        android:typeface="monospace"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oke"
        android:id="@+id/btnOK"
        android:layout_below="@+id/editSisi"
        android:layout_centerHorizontal="true"
        android:background="#F4A460"
        android:textColor="#000"
        android:typeface="monospace"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Luas Persegi"
        android:id="@+id/txtluas"
        android:layout_below="@+id/btnOK"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:typeface="monospace"/>
    
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edithasil"
        android:layout_below="@+id/txtluas"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editSisi"
        android:textColor="#000"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keliling Persegi"
        android:id="@+id/txtkeliling"
        android:layout_below="@+id/edithasil"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:typeface="monospace"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editkeliling"
        android:layout_below="@+id/txtkeliling"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000"
        android:typeface="monospace"/>

    </RelativeLayout>